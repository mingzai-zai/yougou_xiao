/* pages/foodsdetail/index.wxss */
.detail{
  width: 100%;
  position: fixed;
  top: 0;
  bottom: 100rpx;
  overflow: auto;
}
.swiper swiper,
.swiper image{
  width: 100%;
  height: 720rpx;
}

/* 价格 */
.price{
  color: #ff2d4a;
  font-size: 20px;
  padding: 20rpx 10rpx;
}

/* 描述 */
.miaoshu{
  display: flex;
  justify-content: space-between;
  padding: 0 15rpx;
  height: 80rpx;
}
.miaoshu .shuoming{
  width: 588rpx;
  padding-right: 60rpx;
  box-sizing: border-box;
  font-size: 12px;
  border-right: 1px solid #efefef;
}
.miaoshu .shoucang{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 12px;
  color: #999;
  margin-right: 25rpx;
}
/* 免运费 */
.free{
  font-size: 12px;
  color: #ccc;
  margin: 30rpx 0 25rpx 15rpx;
}
/* 隔一下 */
.kong{
  height: 25rpx;
  background: #efefef;
}

/* 底部tab栏 */
.tab{
  height: 100rpx;
  width: 100%;
  display: flex;
  position: fixed;
  bottom: 0;
}
.tab .kefu,
.tab .shopcar{
  position: relative;
  flex: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 12px;
  color: #888;
}
.tab .kefu button{
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: transparent;
}
.tab .joincar,
.tab .buy{
  flex: 30%;
  height: 100rpx;
  font-size: 14px;
  color: #fff;
  background: #ffb517;
  text-align: center;
  line-height: 100rpx;
}
.tab .buy{
  background: #ff2d4a;
}