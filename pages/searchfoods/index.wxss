/* pages/searchfoods/index.wxss */
.search{
  height: 118rpx;
  background:#efefef;
  padding: 25rpx 15rpx;
  box-sizing: border-box;
}
.search input{
  background: #fff;
  height: 100%;
  border-radius: 4px;
  font-size: 14px;
  padding-left: 70rpx;
}
.search icon{
  position: absolute;
  left: 28rpx;
  top: 34rpx;
}
/* 类型列表 */
.type{
  position: relative;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
}
.active{
  color: #ff4d65;
}
.updown{
  position: absolute;
  right: 64rpx;
  top: 28rpx;
  height: 0;
  width: 0;
  border: 4px solid transparent;
  border-bottom: 4px solid  #ccc;
}
.updown::after{
  display: block;
  content: '';
  position: absolute;
  right: -8rpx;
  top: 22rpx;
  height: 0;
  width: 0;
  border: 4px solid transparent;
  border-top: 4px solid  #555;
}

/* 商品展示 */
.foods{
  display: flex;
  justify-content: space-between;
  height: 260rpx;
  border-bottom: 1px solid #ccc;
  padding: 25rpx;
  box-sizing: border-box;
}
.foods image{
  width: 210rpx;
  height: 210rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.foods .content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
}
.content .top{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.content .but{
  color: #ff4d65;
}
.content .but text{
  font-size: 20px;
}