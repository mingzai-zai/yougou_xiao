/**index.wxss**/
.search{
  width: 100%;
  height: 100rpx;
  background: #ff2d4a;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 12px;
  color: #ccc;
}
.searchson{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  text-align: center;
  border-radius: 4px;
}
.searchson icon{
  margin-right: 5px;
  height: 100%;
  padding-top: 2px;
  vertical-align: middle;
}
.swiper,.swiper image{
  width: 100%;
  height: 340rpx;
}

.nav{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
}
.nav image{
  width: 128rpx;
  height: 140rpx;
}

/* type */
.type>image{
  width: 100%;
  height: 60rpx;
  padding-top: 30rpx;
  background: #f5f5f5;
}
.pics{
  padding: 15rpx;
  display: flex;
  justify-content: space-between;
}
.pics_left image{
  width: 232rpx;
  height: 386rpx;
  margin-right:16rpx;
}
.pics_right{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.pics_right image{
  width: 233rpx;
  height: 188rpx;
}

.type:nth-child(n+5) .pics_right image {
  width:193rpx;
}
.type:nth-child(n+5) .pics_right image:nth-child(3n+1) {
  width:273rpx;
}